<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <property name="LOG_PATTERN"
              value="%n%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} [%marker] ${PID:- } --- [trace=%X{X-Trace-Id:-},span=%X{X-Span-Id:-}] [%t] %logger{39}: %m${LOG_EXCEPTION_CONVERSION_WORD:-%throwable}%n" />

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${QVU_LOG_FOLDER}/qvu.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${QVU_LOG_FOLDER}/qvu.log-%d{yyyy-MM-dd-HH}</fileNamePattern>
            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <maxFileSize>5MB</maxFileSize>
            </triggeringPolicy>         
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ROLLING_FILE" />
        <includeCallerData>true</includeCallerData>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <root level="WARN">
        <appender-ref ref="ASYNC_FILE" />
    </root>

    <logger name="org.rbt.qvu" level="INFO" >
        <appender-ref ref="ASYNC_FILE" />
    </logger>
</configuration>                                      

