<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    
    <property name="LOG_PATTERN"
              value="%n%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} %logger: %m${LOG_EXCEPTION_CONVERSION_WORD:-%throwable}%n" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>


    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${QVU_LOG_FOLDER}/qvu.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${QVU_LOG_FOLDER}/qvu-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>5</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ROLLING_FILE" />
        <includeCallerData>true</includeCallerData>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <root level="WARN">
        <appender-ref ref="ASYNC_FILE" />
    </root>

    <logger name="org.rbt.qvu" level="${QVU_LOG_LEVEL:-INFO}" >
        <appender-ref ref="ASYNC_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>                                      

